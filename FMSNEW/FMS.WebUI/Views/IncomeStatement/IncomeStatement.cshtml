<script language="javascript" type="text/javascript">
    jQuery(document).ready(function () {
        var id = getUrlParms("id");
        var reportDate = getUrlParms("reportDate");
        var type = getUrlParms("type");
        var status = getUrlParms("status");
        //alert(status);
