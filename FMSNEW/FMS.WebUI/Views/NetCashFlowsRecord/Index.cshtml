<!--净现金流 model--->
<div class="modal fade" id="NetCashFlowStatisticsModel" tabindex="-1" role="dialog" aria-labelledby="ResaleValue"
    aria-hidden="true">  
    <div class="modal-dialog" style="width: 800px">
        <div class="modal-content">
            <input type="hidden" value="" id="actionHandler" name="actionHandler" />
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" >
                    &times;
                </button>
                <h4 class="modal-title" id="amyModalLabel">
                    净现金流 
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12" style="margin-bottom: 0px">
                             <div class="form-group">
                                <div>
                                    <span  style="font-size: 16px">公司：                                                                       
                                     <b>@ViewData["ChineseFullName"]</b>
                                     <b>  <button onclick="excelexport()" type="button" style="width: 100px; border-radius: 100px; font-size: 12px; border: 0px solid #c0c0c0; font-weight: bold" class="btn btn-primary pull-right">导出</button></b>
                                     </span>
                                </div>
                                <div style="margin-top:10px;margin-left:45px">
                                    <span  style="font-size: 14px;">
                                        <b ><input type="text" id="statisticsCash"  readonly="readonly" style="width:80px;text-align:center"></b>
                                        账号从<b><input type="text" id="statisticsdateBegin"  readonly="readonly" style="width:110px;text-align:center"></b>
                                        至<b><input type="text" id="statisticsdateEnd"  readonly="readonly" style="width:110px;text-align:center"></b>的净现金流
                                    </span>
                                </div>
                             </div>
                    </div>
                    <div class="col-md-12" style="margin-bottom: 0px">
                             <table >
                                <tr  >
                                    <td style = " width:800px" >
                                        <table id="CashFlowsRecordList" style="font-size: 12px" class="asd">
                                        </table>
                                        <table id="CashLocalCurrencyList" style="font-size: 12px;background-color:#F5F5F5;" class="asd">
                                        </table>
                                        <table id="NetCashStatisticalCurrencyList" style="font-size: 12px;background-color:#F5F5F5;" class="asd">
                                        </table>
                                    </td>
                                </tr>                
                            </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" >
                    关闭
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal -->
</div>

