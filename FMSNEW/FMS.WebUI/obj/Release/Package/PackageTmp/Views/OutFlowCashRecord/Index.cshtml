<!--账号流入现金 model--->
<div class="modal fade" id="AccountOutFlowCashModel" tabindex="-1" role="dialog" aria-labelledby="ResaleValue"
    aria-hidden="true">  
    <div class="modal-dialog" style="width: 800px">
        <div class="modal-content">
            <input type="hidden" value="" id="actionHandler" name="actionHandler" />
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" >
                    &times;
                </button>
                <h4 class="modal-title" id="amyModalLabel">
                    账号流出现金
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12" style="margin-bottom: 0px">
                             <div class="form-group">
                                <div>
                                    <span  style="font-size: 16px">公司：                                                                       
                                        <b>@ViewData["ChineseFullName"]</b>        
                                        <b><button onclick="AccountOutFlowCashExport()" type="button" style="width: 100px; border-radius: 100px; font-size: 12px; border: 0px solid #c0c0c0; font-weight: bold" class="btn btn-primary pull-right">导出</button></b>
                                     </span>
                                </div>
                                <div style="margin-top:10px;margin-left:45px">
                                    <span  style="font-size: 14px;">
                                        <b ><input type="text" id="statisticsCash"  readonly="readonly" style="width:80px;text-align:center"></b>
                                         账号从<b><input type="text" id="statisticsdateBegin"  readonly="readonly" style="width:110px;text-align:center"></b>
                                         至<b><input type="text" id="statisticsdateEnd"  readonly="readonly" style="width:110px;text-align:center"></b>的流出现金
                                    </span>
                                </div>
                             </div>
                    </div>
                    <div class="col-md-12" style="margin-bottom: 0px">
                        <table id="AccountOutFlowCashValue" style="font-size: 12px">
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" >
                    关闭
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal -->
</div>

