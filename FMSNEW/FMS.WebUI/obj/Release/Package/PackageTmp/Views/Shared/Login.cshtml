<script type="text/javascript">
   // javascript: window.history.forward(1);
    jQuery(document).ready(function () {
        document.onkeydown = function(e){ 
            var ev = document.all ? window.event : e;
            if(ev.keyCode==13) {
                Login()
                }	
        }

        "use strict";

        // Init Theme Core 	  
        Core.init();

        // Enable Ajax Loading 	  
        Ajax.init();

        var cookieName = getCookie("fmsLoginName");
        $("input[name=LoginName]").val(cookieName);

        // Init Full Page BG(Backstretch) plugin
        //        $.backstretch("img/stock/splash/2.jpg");
    });

    function Login() {
        $("#Login-button").focus();
        //        $("#LoginInfo").submit();
        SaveCookie();
        Submit();
    }

    var confirmMsg = function (r) {
        if (r) {
            $("#UserName").val($("#LoginName").val());
            $("#ForceForm").submit();
        }
    }

    function Submit() {
        $.ajax({
            cache: true,
            type: "POST",
            url: "/Common/Login",
            data: $('#LoginInfo').serialize(),
            async: false,
            error: function (data) {
                $("#ErrorMsg").text(JSON.parse(data).Msg);
            },
            success: function (data) {
                if (JSON.parse(data).Result) {
                    window.location.href = "/Company/ChooseCompany";
                }
                if (JSON.parse(data).Msg == 'SuperManager') {
                    window.location.href = "/Common/BackStageManage";
                }
                else {
                    $("#ErrorMsg").text(JSON.parse(data).Msg);
                    $("#ValidateCode").val("");
                    $("#Password").val("");
                    ChangeValidateCode();
                }
            }
        });
    }

    function ChangeValidateCode(obj) {
        obj.src = "/Common/GetValidateCode?time=" + (new Date()).getTime();
    }

    function SaveCookie() {
        var str_username = $("input[name=LoginName]").val();
        document.cookie = "fmsLoginName=" + str_username;
    }

    function getCookie(name) {
        var arr, reg = new RegExp("(^| )" + name + "=([^;]*)(;|$)");

        if (arr = document.cookie.match(reg))

            return arr[2];
        else
            return "";
    } 
</script>