<script language="javascript" type="text/javascript">
    jQuery(document).ready(function () {
        $('#dataList').bootstrapTable({
                url: "/Company/GetUserListString",
                method: 'get',
                pageSize: 20,
                pageNumber: 1,
                singleSelect: true,
                clickToSelect: true,
                checkOnSelect: true,
                selectOnCheck: true,
                columns: [
                    { field: 'LoginName', title: 'Email',width: '10%', align: 'center'  },
                    { field: 'TelName', title: '用户手机', width: '10%', align: 'center' },
				    { field: 'NickName', title: '昵称', width: '10%', align: 'center' },
				    { field: 'CreateDate', title: '用户授权日期', width: '20%', align: 'center' },
				    { field: 'UC_GUID', title: '', align: 'right', formatter: LinkHandle }
                    ]
            });
    });

    var LinkHandle = function (value, row, index) {
        if (index > 0) {
            var link1 = " <a class='linkbtn' onclick='EditClick(\"" + value + "\")'>变更权限</a> ";
            var link2 = " <a class='linkbtn' onclick='DelClick(\"" + value + "\")'>删除用户</a> ";
            return link1 + link2;
        }
    };

    function Back() {
        window.history.go(-1);
    }

    function EditClick(id) {
        window.location.href = "/UserManagement/UpdateAuthority?guid=" + id;
    }

    function DelClick(id) {
        if(confirm('确认删除？')){
            $.ajax({
                cache: true,
                type: "POST",
                url: "/UserManagement/DelUser?guid=" + id,
                success: function (data) {
                    if (data == 'success') {
                        $('#dataList').bootstrapTable('refresh');
                    } else if (data == 'maserUser') {
                        alert('此用户为管理员无法删除用户');
                    }
                      else {
                        alert('删除失败');
                    }
                }
            });
        }
    }
</script>