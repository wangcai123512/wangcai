                    }
                });
                $("#DetailRPType").multiselect('dataprovider', detailaccount2);

            }
            $("#DetailRPType").val("").multiselect("refresh");

        });
        var pat;
        $.ajax({
            url: "/BusinessUnitSetting/GetBusinessTypeList",
            async: false,
            dataType: "json",
            success: function (d) {
                pat = d;
            }
        });

