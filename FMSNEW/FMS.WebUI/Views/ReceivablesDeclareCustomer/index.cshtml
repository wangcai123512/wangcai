            buttonWidth: '100%',
            maxHeight: '100%',
            includeFilterNewBtn: false

        });
        $("#RPer").multiselect('dataprovider', rper);

        $("#InvType").change(function () {
            if (arr.indexOf($("#InvType").val())>-1) {
                $("#RPer").multiselect('dataprovider', allList);
            } else {
                $("#RPer").multiselect('dataprovider', rper);
